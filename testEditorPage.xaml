<Page x:Class="testiki_wpf.testEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testiki_wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="testEditorPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>


        <DataGrid x:Name="tablichka" Grid.Row="0" Grid.Column="0" SelectionChanged="tablichka_SelectionChanged" BorderBrush="#FF25034A" Background="#FF216F8D" Foreground="Black" FontFamily="Arial"/>

        <Button x:Name="add_que" Content="добавить вопрос" Background="#FF26A09D" FontSize="18" FontFamily="Arial Black" Click="add_que_Click" Grid.Row="1"  VerticalAlignment="Top" Height="70" />
    </Grid>
</Page>
